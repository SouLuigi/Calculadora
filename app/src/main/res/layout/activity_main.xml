<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- formula -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFormula"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Formula"/>

    <!-- result -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:text="@string/_0"
        app:layout_constraintTop_toBottomOf="@+id/tvFormula"
        android:textSize="45sp"
        android:textColor="@color/white"
        />


    <!-- gridLayouts -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult">

        <!-- buttons -->
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/clear"
            android:contentDescription="@string/c"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="10dp"
            android:backgroundTint="@color/soft_yellow"
            android:text="@string/c"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/plus"
            android:contentDescription="@string/plus"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/soft_yellow"
            android:text="@string/plus"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/divide"
            android:contentDescription="@string/divide"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/soft_yellow"
            android:text="@string/divide"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/seven"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_7"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/eight"
            android:contentDescription="@string/_8"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_8"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/nine"
            android:contentDescription="@string/_9"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_9"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/multiply"
            android:contentDescription="@string/multiply"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/soft_yellow"
            android:text="@string/multiply"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/four"
            android:contentDescription="@string/_4"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/button_text_color"
            android:text="@string/_4"
            android:textSize="@dimen/button_text_size"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/five"
            android:contentDescription="@string/_5"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_5"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/six"
            android:contentDescription="@string/_6"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_6"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/minus"
            android:contentDescription="@string/minus"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/soft_yellow"
            android:text="@string/minus"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/one"
            android:contentDescription="@string/_1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_1"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/two"
            android:contentDescription="@string/_2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_2"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/three"
            android:contentDescription="@string/_3"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_3"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/equals"
            android:contentDescription="@string/equal"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/soft_yellow"
            android:text="@string/equal"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/zero"
            android:contentDescription="@string/_0"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/_0"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/dot"
            android:contentDescription="@string/dot"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/dot"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            app:cornerRadius="15dp"
            />

    </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




